datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String    @id @default(cuid())
  name     String    @default("")
  email    String    @unique @default("")
  password String
  projects Project[] @relation("Project_author")
}

model Project {
  id                  String    @id @default(cuid())
  title               String    @default("")
  description         String    @default("")
  status              String    @default("draft")
  thumbnail_filesize  Int?
  thumbnail_extension String?
  thumbnail_width     Int?
  thumbnail_height    Int?
  thumbnail_id        String?
  githubLink          String    @default("")
  projectLink         String    @default("")
  thumbnailAlt        String    @default("")
  tags                Tag[]     @relation("Project_tags")
  createdDate         DateTime?
  author              User?     @relation("Project_author", fields: [authorId], references: [id])
  authorId            String?   @map("author")

  @@index([authorId])
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @default("")
  projects Project[] @relation("Project_tags")
}